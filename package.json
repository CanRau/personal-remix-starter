    "cross-env": "7.0.3",
    "express": "4.18.1",
    "ksuid": "3.0.0",
    "@sindresorhus/slugify": "2.1.0",
    "morgan": "1.10.0",
    "pouchdb": "7.3.0",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@remix-run/dev": "1.5.1",
    "@remix-run/eslint-config": "1.5.1",
    "@types/react": "^17.0.45",
    "@types/react-dom": "^17.0.17",
    "eslint": "8.17.0",
    "nodemon": "2.0.16",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
